<% include ../layout/header.ejs %>
<nav>
  <div class="container">
    <div class="nav__cabinet col-12">
      <ul class="nav__cabinet_menu">
        <li class="nav__cabinet_item col-3  active"><a href="/cabinetAdmin/new_recipes">New Recipes</a></li>
        <li class="nav__cabinet_item col-3"><a href="/cabinetAdmin">Nothing</a></li>
